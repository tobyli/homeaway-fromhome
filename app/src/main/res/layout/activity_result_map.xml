<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:panelHeight="68dp"
    sothree:shadowHeight="20dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listviewbt"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <Button
            android:id="@+id/button_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="280dp"
            android:alpha="0.8"
            android:background="@drawable/button_background"
            android:text="ListView"
            android:textColor="@color/buttontext"
            android:onClick="goList"/>
</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/dragView"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:id="@+id/horizontalView"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">
            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/topView">
                <TextView
                    android:id="@+id/bar_textview"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:gravity="center_vertical|left"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/bar_textScoreView"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:gravity="center_vertical|left"
                    android:textColor="#878787"
                    android:textSize="15sp" />
            </LinearLayout>


            <Button
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:text="Zoom"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:drawableLeft="@drawable/zoom_in_unselected"
                android:id="@+id/button"
                android:onClick="zoomDetail"/>
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/description"
            android:gravity="top|center_horizontal"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <TextView
                android:id="@+id/bar_textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/town_photo"
                android:gravity="top"/>
            <TextView
                android:id="@+id/bar_textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:textSize="16sp" />

        </LinearLayout>
        </LinearLayout>








</com.sothree.slidinguppanel.SlidingUpPanelLayout>